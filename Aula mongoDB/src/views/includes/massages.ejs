<% if(errors.length > 0) {%>
          <div class="row">
            <div class="col">
              <div class="alert alert-danger my-3">
                <% errors.forEach(error => { %>
                    <%= error %><br>
                <% }); %>

              </div>
            </div>
          </div>
<% } %>


<% if(success.length > 0) {%>
    <div class="row">
      <div class="col">
        <div class="alert alert-success my-3">
          <% success.forEach(sus => { %>
              <%= sus %><br>
          <% }); %>
        </div>
      </div>
    </div>
<% } %>