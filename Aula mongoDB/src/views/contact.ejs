<%- include('includes/header') %>
  <%- include('includes/nav') %>

    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-5">
          <% if(!contact._id) { %>
            <h1 class="text-center">Contatos</h1>
            <p class="text-center lead">Crie seus contatos</p>
            <% } else { %>
              <h1 class="text-center">Edição de Contato</h1>
              <p class="text-center lead">edite seu contato</p>
              <% } %>

                <%- include('includes/massages')%>


                  <% if(!contact._id) { %>
                    <form action="/contact/register" method="post">
                      <% } else { %>
                        <form action="/contact/edit/<%= contact._id %> " method="post">
                          <% } %>
                            <input type="hidden" name="_csrf" value=<%=csrfToken %>>
                            <div class="mb-3">
                              <label class="form-label">Nome:</label>
                              <input value="<%= contact.name %>" type="text" class="form-control"
                                id="exampleInputEmail1" aria-describedby="emailHelp" name="name">
                            </div>
                            <div class="mb-3">
                              <label class="form-label">Email:</label>
                              <input value="<%= contact.email %>" type="email" class="form-control"
                                id="exampleInputPassword1" name="email">
                            </div>
                            <div class="mb-3">
                              <label class="form-label">Telefone:</label>
                              <input value="<%= contact.number %>" type="tel" class="form-control"
                                id="exampleInputPassword1" name="number">
                            </div>

                            <button type="submit" class="btn btn-primary">Enviar</button>
                        </form>

        </div>
        <div class="col-lg-2"></div>
      </div>
    </div>

    <%- include('includes/footer') %>